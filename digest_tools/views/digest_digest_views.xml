<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

    <record id="digest_digest_view_form" model="ir.ui.view">
        <field name="name">digest.digest.view.form.inherit.tools</field>
        <field name="model">digest.digest</field>
        <field name="inherit_id" ref="digest.digest_digest_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_send_manual']" position="after">
                <button name="action_send_preview" type="object"
                    class="btn-danger"
                    string="Send Preview"/>
                <button name="action_send_preview_1tip" type="object"
                    class="btn-danger"
                    string="Send Preview (1 tip)"/>
            </xpath>
        </field>
    </record>

</data></odoo>
